@model IEnumerable<Hotel_PL.Models.RoomModel>

@{
    ViewData["Title"] = "AllRooms";
}

<h1>Все комнаты</h1>

<p>
    <a asp-action="Create" >Добаваить комнату</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomCategory.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomCategory.Bed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.RoomCategory.Name)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.RoomCategory.Bed)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }) |
            </td>
        </tr>
}
    </tbody>
</table>
