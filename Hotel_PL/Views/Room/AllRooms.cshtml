@model IEnumerable<Hotel_PL.Models.RoomModel>

@{
    ViewData["Title"] = "AllRooms";
}


<div class="btn-group mb-5" role="group" aria-label="Basic example">
    <form class="ml-3 pr-2 buttonn-form" asp-controller="FreeRooms" asp-action="FreeRoomsNow" method="get" >
        <div class="row">
            <div class=" col-lg-12">

                <button type="submit">Свободные комнаты сейчас</button>
            </div>
        </div>
    </form>
    <form class="pr-2 buttonn-form" asp-controller="FreeRooms" asp-action="FreeRoomsByDate" method="get">
        <div class="row">
            <div class="col-lg-12">

                <button type="submit">Свободные комнаты на дату</button>
            </div>
        </div>
    </form>
    <form class="pr-2 buttonn-form" asp-controller="FreeRooms" asp-action="FreeRoomsByDateRange" method="get" >
        <div class="row">
            <div class="col-lg-12">
                <button type="submit">Свободные комнаты на диапазон дат</button>
            </div>
        </div>
    </form>
</div>

<h1 class="ml-2  mb-3">Все комнаты</h1>

        <!-- Rooms Section Begin -->
        <section class="rooms-section spad">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="room-item">
                                <img src="img/room-1.jpg" alt="">
                                <div class="ri-text">
                                    <h4>Комната № @item.Name</h4>
                                    <h4> Категория  @Html.DisplayFor(modelItem => item.RoomCategory.Name)</h4>
                                    <h3>@item.Price UAH<span>/за сутки</span></h3>
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td class="r-o">Кровати:</td>
                                                <td>@Html.DisplayFor(modelItem => item.RoomCategory.Bed)</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <a asp-controller="Room" asp-action="Details" name="id" asp-route-id=@item.Id class="primary-btn">Подробнее</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
