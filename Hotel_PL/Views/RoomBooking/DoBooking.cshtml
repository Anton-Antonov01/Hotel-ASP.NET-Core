@model Hotel_PL.ViewModels.RoomBookingViewRequest

@{
    ViewData["Title"] = "Бронирование";
}

<h1 class="mb-5">Бронирование комнаты № @Model.roomNumber</h1>
<h4 class="mb-4">Категория @Model.category  </h4>
<h4 class="mb-4">Цена за сутки @Model.PricePerDay  </h4>
<div class="row">
    <div class="col-md-4">
        <form class="buttonn-form" asp-action="DoBooking" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="roomBookingRequest.BookingDate" class="control-label"></label>
                <input type="date" asp-for="roomBookingRequest.BookingDate" class="form-control" />
                <span asp-validation-for="roomBookingRequest.BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="roomBookingRequest.EnterDate" class="control-label"></label>
                <input type="date" asp-for="roomBookingRequest.EnterDate" class="form-control" />
                <span asp-validation-for="roomBookingRequest.EnterDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="roomBookingRequest.NumberOfDays" class="control-label"></label>
                <input asp-for="roomBookingRequest.NumberOfDays" class="form-control" />
                <span asp-validation-for="roomBookingRequest.NumberOfDays" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="roomId" value="@Model.roomId" />
            <input type="hidden" asp-for="roomNumber" value="@Model.roomNumber" />
            <input type="hidden" asp-for="category" value="@Model.category" />
            <input type="hidden" asp-for="PricePerDay" value="@Model.PricePerDay" />
            <div class="form-group">
                <button type="submit">Забронировать</button>
            </div>
        </form>
    </div>
</div>


<div>
    <a class="text-primary"  asp-controller="Room" asp-action="Details" asp-route-id=@Model.roomId>Назад</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}
